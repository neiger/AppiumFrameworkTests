<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Appium Android Automation Framework" parallel="methods" thread-count="1">

    <listeners>
        <listener class-name="general.MobileDriverManager">
            <!-- Mobile timeout and halt setup -->
            <parameter name="tmStatic" value="3"/>
            <parameter name="tmDynamic" value="10"/>

            <!--  Mobile Main Config Parameters  -->
            <parameter name="platformName" value="Android"/>
            <parameter name="platformVersion" value="13"/>  <!-- non-GMS Android 11 / GMS Android 12 -->
            <parameter name="deviceName" value="R3CTC0D3BFE"/> <!-- non-GMS HWQYD22514501984  GMS R3CTC0D3BFE Emulator emulator-5554 -->
            <parameter name="automationName" value="UiAutomator2"/>
            <parameter name="appPackage" value="com.google.android.apps.maps"/>   <!-- com.openmobilehub.auth.sample|com.google.android.apps.maps|com.avantica.qapp -->
            <parameter name="appActivity" value="com.google.android.maps.MapsActivity"/> <!--com.openmobilehub.auth.sample.login.LoginActivity| com.google.android.maps.MapsActivity   com.avantica.qapp.activities.GreetingActivity -->
            <parameter name="noReset" value="true"/> <!-- True to prevent prompt for asking permissions again -->
            <parameter name="appiumServer" value="http://127.0.0.1:4723/wd/hub"/>
        </listener>
    </listeners>


    <!--  Test Case testing Parameters  -->
    <parameter name="address" value="San Jose, Curridabat;San Jose, Ciudad Colon;37.3732324,-121.9654005"/>
    <parameter name="getStartX" value="540" /> <!--   810      720 -->
    <parameter name="getStartY" value="1780" /> <!--  1780     2500 -->
    <parameter name="getEndX" value="540" />  <!--    330      720 -->
    <parameter name="getEndY" value="100" /> <!--    100     506 -->



    <!--  Test Case Execution Order  -->
    <test name="Android Apps Test Cases">
        <classes>
            <class name="tests.MapsMainScreenTests">
                <!-- -->
                <methods>
                    <exclude name="verifyMapsMainScreen"/>
                    <exclude name="verifySearchMapsWithLatAndLong"/>
                    <include name="verifyDoubleTapOnMap"/>
                    <include name="verifyDoubleTapOnMapScreen" />
                    <exclude name="verifySwipeOnScreenWithCoordinatesXxYy" />
                    <exclude name="verifyUsersCanSwipeWhileExploring" /> <!-- needs fix -->
                    <exclude name="verifyMultiTouchOnMapsScreen" />
                    <exclude name="verifyTextDisplayedOnMobileElement" />
                </methods>
            </class>

            <class name="tests.AuthSampleLoginScreenTests">
                <methods>
                    <exclude name="verifyUserCanSignInFromWebViewBrowserScreen"/>
                </methods>
            </class>

        </classes>
    </test>

</suite>